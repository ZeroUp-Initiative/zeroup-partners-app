rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is the owner
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Users collection
    match /users/{userId} {
      // Allow public read of basic profile info for constellation display
      // This exposes: firstName, lastName, photoURL, createdAt
      allow read: if true;
      
      // Users can create their own profile during signup
      allow create: if isOwner(userId);
      
      // Users can update their own profile (but not change role)
      allow update: if isOwner(userId) && 
        (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['role']));
      
      // Only admins can delete users or change roles
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // Payments/Contributions collection
    match /payments/{paymentId} {
      // Allow public read of approved payments (for constellation connections)
      // Only exposes: userId, projectId, status for approved payments
      allow read: if resource.data.status == 'approved';
      
      // Users can read their own payments (any status)
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Admins can read all payments
      allow read: if isAdmin();
      
      // Authenticated users can create payments (with their own userId)
      allow create: if isAuthenticated() && 
        request.resource.data.userId == request.auth.uid &&
        request.resource.data.status == 'pending';
      
      // Only admins can update payments (approve/reject)
      allow update: if isAdmin();
      
      // Only admins can delete payments
      allow delete: if isAdmin();
    }
    
    // Projects collection
    match /projects/{projectId} {
      // Anyone can read projects (public)
      allow read: if true;
      
      // Only admins can create, update, or delete projects
      allow create, update, delete: if isAdmin();
    }
    
    // Notifications collection
    match /notifications/{notificationId} {
      // Users can read their own notifications
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // System/Admin can create notifications
      allow create: if isAdmin();
      
      // Users can update their own notifications (mark as read)
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Users can delete their own notifications
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Gamification/Coins collection (future use)
    match /userCoins/{userId} {
      allow read: if isOwner(userId);
      allow write: if isAdmin(); // Only system can update coins
    }
    
    // Achievements collection (future use)
    match /achievements/{achievementId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // User achievements (future use)
    match /userAchievements/{docId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
    
    // Notification preferences collection
    match /notificationPreferences/{userId} {
      // Users can read and write their own preferences
      allow read, write: if isOwner(userId);
      
      // Admins can read all preferences
      allow read: if isAdmin();
    }
  }
}
